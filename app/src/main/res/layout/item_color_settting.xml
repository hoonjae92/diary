<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_color"
        android:layout_margin="@dimen/item_color_margin"
        android:layout_width="@dimen/todo_seleted_color_width"
        android:layout_height="@dimen/todo_seleted_color_height"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/item_color_clicked"
        android:layout_width="@dimen/todo_seleted_color_width"
        android:layout_height="@dimen/todo_seleted_color_height"
        android:layout_margin="@dimen/item_color_margin"
        android:scaleType="center"
        android:src="@drawable/round_cancel_24px"/>
</FrameLayout>