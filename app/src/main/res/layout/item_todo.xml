<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">
    <android.support.v7.widget.CardView
        android:id="@+id/item_layout"
        card_view:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_contents_height"
        android:layout_margin="2dp"
        android:elevation="@dimen/elevation_low"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/todo_tv"
            android:layout_width="@dimen/item_tv_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="@dimen/item_margin"
            android:gravity="center"
            android:singleLine="true"
            android:text="할 일" />
        <ImageButton
            android:id="@+id/todo_btn_close"
            android:layout_gravity="right|center"
            android:layout_marginEnd="@dimen/item_margin"
            android:layout_width="@dimen/item_btn_size"
            android:layout_height="@dimen/item_btn_size"
            android:background="#00ffffff"
            android:src="@drawable/close_24px"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
